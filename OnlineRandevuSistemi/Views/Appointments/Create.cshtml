@model Appointment

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">Yeni Randevu Ekle</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label for="ServiceId" class="form-label">Hizmet Seçin:</label>
                            <select asp-for="ServiceId" class="form-select" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name"))">
                                <option value="">Hizmet Seçin</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="AppointmentDate" class="form-label">Randevu Tarihi:</label>
                            <input type="date" asp-for="AppointmentDate" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                        </div>
                        <button type="submit" class="btn btn-success w-100">Randevu Oluştur</button>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    <p><a href="/Appointments/Index" class="text-success">Mevcut Randevulara Geri Dön</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
