@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center p-4">
                    <h2 class="mb-0"><i class="bi bi-person-circle"></i> Giriş Yap</h2>
                </div>
                <div class="card-body p-5">
                    <!-- Genel hata mesajları -->
                    <div asp-validation-summary="All" class="alert alert-danger text-center" style="display: none;"></div>

                    <form asp-action="Login" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="Kullanıcı Adınızı Girin" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Şifrenizi Girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg">Giriş Yap</button>
                    </form>

                    <hr class="my-4">

                    <!-- Kayıt Ol Butonu -->
                    <div class="text-center mt-4">
                        <a asp-action="Register" class="btn btn-outline-secondary btn-sm">Hesabınız yok mu? Kayıt Olun</a>
                    </div>

                    <!-- Genel hata mesajları -->
                    @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            <p>@ViewData.ModelState[""].Errors[0].ErrorMessage</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


