@model OnlineRandevuSistemi.Models.User

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> Yeni Kullanıcı Oluştur</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateUser" method="post">
                <!-- Kullanıcı Adı -->
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label fw-bold">Kullanıcı Adı</label>
                    <input asp-for="Username" class="form-control form-control-sm" placeholder="Kullanıcı adını girin" />
                </div>

                <!-- Şifre -->
                <div class="form-group mb-3">
                    <label asp-for="PasswordHash" class="form-label fw-bold">Şifre</label>
                    <input asp-for="PasswordHash" class="form-control form-control-sm" type="password" placeholder="Şifreyi girin" />
                </div>

                <!-- Rol -->
                <div class="form-group mb-4">
                    <label asp-for="RoleId" class="form-label fw-bold">Rol</label>
                    <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))" class="form-select form-select-sm">
                        <option value="" selected disabled>Bir rol seçin</option>
                    </select>
                </div>

                <!-- İşlem Butonları -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-sm me-2">
                        <i class="bi bi-check-circle-fill"></i> Oluştur
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle-fill"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
