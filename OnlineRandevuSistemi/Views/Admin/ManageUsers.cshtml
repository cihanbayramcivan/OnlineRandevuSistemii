@model IEnumerable<OnlineRandevuSistemi.Models.UserViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Kullanıcı Yönetimi</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left-circle"></i> Ana Sayfaya Dön
            </a>
            <a asp-action="CreateUser" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Yeni Kullanıcı Oluştur
            </a>
        </div>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-secondary text-center">
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Rol</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-center">
                        <td>@user.Username</td>
                        <td>
                            <span class="badge bg-primary">@user.RoleName</span>
                        </td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="UpdateUserRole" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Rol Güncelle
                                </a>
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
