@model OnlineRandevuSistemi.Models.UserViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-badge"></i> Kullanıcı Rolünü Güncelle</h2>
        </div>
        <div class="card-body">
            <form asp-action="UpdateUserRole" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Kullanıcı Adı:</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="RoleId" class="form-label">Rol:</label>
                    <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))" class="form-select">
                        <option selected disabled>Bir rol seçin</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-sm me-2">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
    