@model OnlineRandevuSistemi.Models.AppointmentViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0"><i class="bi bi-calendar-check"></i> Randevu Durumu Güncelle</h2>
        </div>
        <div class="card-body">
            <form asp-action="UpdateAppointmentStatus" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Durum:</label>
                    <select asp-for="Status" class="form-select">
                        <option selected disabled>Bir durum seçin</option>
                        @foreach (var status in Enum.GetValues(typeof(OnlineRandevuSistemi.Enums.AppointmentStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-sm me-2">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                    <a asp-action="ManageAppointments" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
